<p id="notice"><%= notice %></p>

<h1>Listing Specials</h1>

<table>
  <thead>
    <tr>
      <th>Special</th>
      <th>Title</th>
      <th>Picture</th>
      <th>Restaurant</th>
      <th>Sdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @specials.each do |special| %>
      <tr>
        <td><%= special.special %></td>
        <td><%= special.title %></td>
        <td><%= special.picture %></td>
        <td><%= special.restaurant %></td>
        <td><%= special.sdate %></td>
        <td><%= link_to 'Show', special %></td>
        <td><%= link_to 'Edit', edit_special_path(special) %></td>
        <td><%= link_to 'Destroy', special, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

