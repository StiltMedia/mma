<%= form_for(@special) do |f| %>
<!-- main site -->
<section class="think-tank no-padding">

    <!-- header container -->
    <div class="header-container">
        <!-- header -->
        <header class="header-top">

            <div class="go-back">
                <a class="link link-big" href="javascript: window.history.back()">
                    <i><img src="<%=asset_path("icons/i_angle_left.png")%>" alt="icon_angle"></i>

                    <h3>
                        ADD SPECIAL
                    </h3>
                </a>
            </div>

            <div class="profile">
                <a class="link link-profile" href="/pages/edit_profile"><img class="img-circle" src="<%=url_for(:controller => "users", :action => "show_picture", :id => current_user.id)%>" alt="profile"></a>
            </div>

        </header>
        <!-- .header -->
    </div>
    <!-- .header container -->

    <!-- add post form -->
    <div class="screen-inner">
        <div class="container">

            <div class="form-login form-alt">
                <div class="row">

                    <div class="col-md-12">
                        <div class="input-group">
                            <%= f.text_field :title, :class => "form-control", :placeholder => "TITLE" %>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="input-group">
                            <%= f.date_field :sdate, :class => "form-control", :placeholder => "SELECT DATE" %>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="input-group">
                            <%= f.text_area :special, :class => "form-control", :placeholder => "WRITE..." %>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="input-group">
                            <%= f.file_field :picture, accept: 'image/jpeg,image/jpg', id: "file-upload-3" %>

                        </div>
                    </div>

                </div>
            </div>

            <!-- log in button -->
            <div class="button">
                <div class="row">
                    <div class="col-xs-5 col-xs-offset-1">
                        <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
                        <%= f.submit "SUBMIT", :class => "btn btn-dark full" %>
                    </div>
                    <div class="col-xs-5">
                        <a class="btn btn-dark full" href="javascript:window.history.back()">CANCEL</a>
                    </div>
                </div>
            </div>
            <!-- .log in button -->

        </div>
    </div>
    <!-- add post form -->


    <!-- footer nav -->
    <footer class="footer-nav">
        <nav>
            <ul class="list-unstyled">
                <li><a href="/"><img src="<%=asset_path("icons/i_home.png")%>" alt="icon_home"></a></li>
                <li><a href="/thinktanks"><img src="<%=asset_path("icons/i_comment.png")%>" alt="icon_comment"></a></li>
                <li><a href="/pages/restaurants"><img src="<%=asset_path("icons/i_restaurant.png")%>" alt="icon_restaurant"></a></li>
                <li><a href="/pages/coming_soon"><img src="<%=asset_path("icons/i_search_footer.png")%>" alt="icon_search"></a></li>
            </ul>
        </nav>
    </footer>
    <!-- footer nav -->


</section>
<!-- .main site -->

<% end %> <!-- form_for -->
