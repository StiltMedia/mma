


<%= form_for(@recap) do |f| %>
<!-- main site -->
<section class="think-tank no-padding">

    <%= render "shared/header", h3_text: "RECAP POST" %>

    <!-- add post form -->
    <div class="screen-inner">
        <div class="container">

            <div class="form-login form-alt">
                <div class="row">

                    <div class="col-md-12">
                        <div class="input-group">
                            <input type="text" name="recap[rdate]" disabled class="form-control" placeholder="Date" value="<%=Time.now.strftime("%A, %b %d %Y") %>">
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="input-group">
                            <%= select(:recap, :restaurant_id) do%>
                              <% Restaurant.all.each do |c| -%>
                                <%= content_tag(:option, c.name, value: c.id) %>
                              <% end %>
                            <% end %>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="input-group">
                            <%= f.hidden_field :user_id, :value => current_user.id %>
                            <%= f.hidden_field :rdate, :value => Time.now %>
                            <input type="text" disabled class="form-control" value="Author: <%=current_user.email%>">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="input-group">
                            <%= f.text_area :recap, :class => "form-control", :placeholder => "WRITE..." %>
                        </div>
                    </div>

                    <div class="col-md-12 hidden">
                        <div class="input-group">
                            <input class="form-control inputfile" type="file" name="file" id="file" accept="image/*"
                                   data-multiple-caption="{count} files selected" multiple>
                            <label for="file"><span>ADD IMAGE +</span></label>
                        </div>
                    </div>

                </div>
            </div>

            <!-- log in button -->
            <div class="button">
                <div class="row">
                    <div class="col-xs-5 col-xs-offset-1">
                        <%= f.submit "SUBMIT", class: "btn btn-dark full" %>
                    </div>
                    <div class="col-xs-5">
                        <a class="btn btn-dark full" href="/recaps">CANCEL</a>
                    </div>
                </div>
            </div>
            <!-- .log in button -->

        </div>
    </div>
    <!-- add post form -->

    <%= render "shared/footer_nav" %>

</section>
<!-- .main site -->

<% end %> <!-- form_for -->

























