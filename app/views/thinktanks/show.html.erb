<body>
<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<!-- main site -->
<section class="think-tank no-padding">

    <!-- header container -->
    <div class="header-container">
        <!-- header -->
        <header class="header-top">

            <div class="go-back">
                <a class="link link-big" href="/thinktanks">
                    <i><img src="<%=asset_path("icons/i_angle_left.png")%>" alt="icon_angle"></i>

                    <h3 class="hidden">
                        TITLE OF POST HERE
                    </h3>
                </a>
            </div>

            <div class="profile">
                <a class="link link-profile" href="/pages/edit_profile"><img class="img-circle" src="<%=url_for(:controller => "users", :action => "show_picture", :id => current_user.id)%>" alt="profile"></a>
            </div>

        </header>
        <!-- .header -->
    </div>
    <!-- .header container -->

    <!-- think tank inside post -->
    <div class="screen-inner thinktank-show-page">
        <div class="container">

            <!-- post inside -->
            <div class="post-inside">

                <!-- post image -->
                <div class="post-image">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="<%=url_for(:controller => "thinktanks", :action => "show_picture", :id => @thinktank.id)%>" alt="post_image">


                        </div>
                    </div>
                </div>
                <!-- .post image -->

                <!-- post text -->
                <div class="text-container">

                    <div class="row">
                        <div class="col-md-12">

                            <div class="post-title">
                                <h6><%= @thinktank.title.upcase %></h6>
                            </div>

                            <div class="post-meta">
                                <span class="date"><%= @thinktank.updated_at.to_s(:long)%></span>
                                |
                                <span class="author">Author: <%= @thinktank.user.email %></span>
                            </div>

                            <div class="post-content">
                                <pre style="background-color: transparent; border: 0px"><%= @thinktank.thinktank %></pre>
                                <!--
                                <ul class="list-unstyled">
                                    <li>Ingredients:</li>
                                    <li>1 Lorem Ipsum</li>
                                    <li>5 Lorem</li>
                                    <li>1/2 Lorem Imp</li>
                                </ul>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                    incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
