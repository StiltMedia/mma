
<!-- main site -->
<section class="think-tank no-padding">

    <!-- header container -->
    <div class="header-container">
        <!-- header -->
        <header class="header-top">

            <div class="go-back">
                <a href="/"><i><img src="<%=asset_path("logo.svg")%>" alt="logo"></i></a>
            </div>

            <div class="profile">
                <a class="link link-profile" href="/pages/edit_profile"><img class="img-circle" src="<%=url_for(:controller => "users", :action => "show_picture", :id => current_user.id)%>" alt="profile"></a>
            </div>

        </header>
        <!-- .header -->
    </div>
    <!-- .header container -->

    <!-- think tank inside post -->
    <div class="screen-inner">
        <div class="container">
          <% if notice.present? || alert.present? %>
          <p class="notice"><%= notice %> <%= alert %> </p>
          <% end %>
            <!-- account home -->
            <div class="account-home">

                <!-- account box -->
                <div class="account-box">
                    <a href="/thinktanks">
                        <div class="account-inner">
                            <img src="<%=asset_path("icons/i_comment_dark.png")%>" alt="icon_calendar">
                            <h3>THINK TANK</h3>
                        </div>
                    </a>
                </div>
                <!-- .account box -->

                <!-- account box -->
                <div class="account-box">
                    <a href="restaurants.html">
                        <div class="account-inner">
                            <img src="<%=asset_path("icons/i_restaurant_dark.png")%>" alt="icon_restaurant">
                            <h3>RESTAURANTS</h3>
                        </div>
                    </a>
                </div>
                <!-- .account box -->

                <!-- account box -->
                <div class="account-box">
                    <a href="/pages/coming_soon">
                        <div class="account-inner">
                            <img src="<%=asset_path("icons/i_search_dark.png")%>" alt="icon_search">
                            <h3>SEARCH</h3>
                        </div>
                    </a>
                </div>
                <!-- .account box -->

            </div>
            <!-- .account home -->

        </div>
    </div>
    <!-- .think tank inside post -->

    <%= render "shared/footer_nav" %>

</section>
<!-- .main site -->
