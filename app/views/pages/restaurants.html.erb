
<!-- main site -->
<section class="think-tank no-padding">

    <!-- header container -->
    <div class="header-container">
        <!-- header -->
        <header class="header-top">

            <div class="go-back">
                <a class="link link-big" href="/">
                    <i><img src="<%=asset_path("icons/i_angle_left.png")%>" alt="icon_angle"></i>

                    <h3>
                        RESTAURANTS
                    </h3>
                </a>
            </div>

            <div class="profile">
                <a class="link link-profile" href="/pages/edit_profile"><img class="img-circle" src="<%=url_for(:controller => "users", :action => "show_picture", :id => current_user.id)%>" alt="profile"></a>
            </div>

        </header>
        <!-- .header -->
    </div>
    <!-- .header container -->

    <!-- think tank inside post -->
    <div class="screen-inner">
        <div class="container">

            <!-- restaurants -->
            <div class="restaurants">
                <% Restaurant.all.each do |restaurant| %>
                <!-- restaurant link -->
                <div class="restaurant-link">
                    <div class="row">
                        <div class="col-md-12">
                            <%= link_to restaurant.name, restaurant, :class => "btn btn-large full" %>
                        </div>
                    </div>
                </div>
                <!-- .restaurant link -->
                <% end %>

            </div>
            <!-- .restaurants -->

        </div>
    </div>
    <!-- .think tank inside post -->

    <!-- footer nav -->
    <footer class="footer-nav">
        <nav>
            <ul class="list-unstyled">
                <li><a href="/"><img src="<%=asset_path("icons/i_home.png")%>" alt="icon_home"></a></li>
                <li><a href="/thinktanks"><img src="<%=asset_path("icons/i_comment.png")%>" alt="icon_comment"></a></li>
                <li><a href="/pages/restaurants.html"><img src="<%=asset_path("icons/i_restaurant.png")%>" alt="icon_restaurant"></a></li>
                <li><a href="/pages/coming_soon"><img src="<%=asset_path("icons/i_search_footer.png")%>" alt="icon_search"></a></li>
            </ul>
        </nav>
    </footer>
    <!-- footer nav -->

</section>
<!-- .main site -->

