<section>
  <div class="content-wrapper">
    <div class="content-heading">
      Users
    </div>
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div id="datatable1_wrapper" class="dataTables_wrapper form-inline no-footer">
            <table id="datatable1" class="table table-striped table-hover dataTable no-footer" role="grid" aria-describedby="datatable1_info">
              <thead>
                <tr role="row">
                  <th class="sorting_asc" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 122px;">ID</th>
                  <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 182px;">EMAIL</th>
                  <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 182px;">ADMIN?</th>
                  <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 182px;">CHEF?</th>

                  <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 182px;">Action</th>
                </tr>
              </thead>
              <tbody>

                <% @users.order(:id).each do |user| %>
                  <tr class="gradeA odd" role="row">
                    <td class="sorting_1"><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= best_in_place user, :admin, :as => :select, :place_holder => "No <i class='fa fa-edit'></i>", :collection => {"false" => "No", "true" => "Yes" } %>&nbsp; &nbsp;</td>
                    <td><%= best_in_place user, :chef, :as => :select, :place_holder => "No <i class='fa fa-edit'></i>", :collection => {"false" => "No", "true" => "Yes" } %>&nbsp; &nbsp;</td>
                    <td>
                      <%= link_to "<i class='fa fa-remove'></i>".html_safe, user_path(user), :method => :delete, :confirm => "You sure?" %>
                    </td>
                  </tr>
                <% end %>

              </tbody>
            </table>
            <div class="row">
              <div class="col-xs-6">
                <div class="dataTables_info" id="datatable1_info" role="status" aria-live="polite">Showing <%= @users.size %> users</div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
</section>
